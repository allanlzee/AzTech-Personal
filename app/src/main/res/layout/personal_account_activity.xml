<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalAccount">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textPreferredName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferred_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textPreferredName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="@string/name"
            android:padding="10dp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextName"
            android:layout_marginTop="30dp"
            android:text="@string/primary_email"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="@string/email"
            android:padding="10dp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextEmail"
            android:layout_marginTop="30dp"
            android:text="@string/profile_image"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilePicture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textProfile"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            app:riv_oval="true"
            android:layout_marginStart="10dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilePicture2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textProfile"
            android:layout_toEndOf="@+id/profilePicture"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper21"
            app:riv_oval="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilePicture3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textProfile"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/profilePicture2"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper23"
            app:riv_oval="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilePicture4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textProfile"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/profilePicture3"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper25"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/textGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePicture"
            android:layout_marginTop="30dp"
            android:text="@string/custom_greeting"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/textEditGreeting"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textGreeting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="@string/greeting"
            android:padding="10dp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEditGreeting"
            android:layout_marginTop="30dp"
            android:text="@string/pw"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/textEditPassword"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="@string/pw"
            android:padding="10dp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>


</RelativeLayout>